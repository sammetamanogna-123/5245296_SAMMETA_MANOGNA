def timeConversion(s):
    # Write your code here
    time_period = s[-2:]
    t = s[:-2].split(':')
    h = int(t[0])
    if time_period == 'AM':
        if h == 12:
            t[0] = '00'
        else:
            t[0] = f'{h:02d}'
    else:
        if h != 12:
            h += 12
        t[0] = f'{h:02d}'
    return ':'.join(t)
