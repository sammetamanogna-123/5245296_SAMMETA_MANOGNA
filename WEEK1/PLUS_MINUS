import math
import os
import random
import re
import sys

#
# Complete the 'plusMinus' function below.
#
# The function accepts INTEGER_ARRAY arr as parameter.
#

def plusMinus(arr):
    # Write your code here
    n = len(arr)
    positive_values = sum(1 for i in arr if i > 0)
    negative_values = sum(1 for i in arr if i < 0)
    zeros_values = sum(1 for i in arr if i == 0)
    print(f"{positive_values / n:.6f}")
    print(f"{negative_values / n:.6f}")
    print(f"{zeros_values / n:.6f}")

if __name__ == '__main__':
    n = int(input().strip())

    arr = list(map(int, input().rstrip().split()))

    plusMinus(arr)
