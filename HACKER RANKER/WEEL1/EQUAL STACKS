#include<stdio.h>

int equalStacks(int h1[], int n1, int h2[], int n2, int h3[], int n3) {
    int s1 = 0, s2=0,s3=0;
    for(int i=0;i<n1;i++) s1+=h1[i];
    for(int i=0;i<n2;i++) s2+=h2[i];
    for(int i=0;i<n3;i++) s3+=h3[i];
    int i1=0, i2=0, i3=0;
    while(1) {
        if(i1==n1 || i2==n2 || i3==n3)
        return 0;
        if(s1==s2 && s2==s3)
        return s1;
        if(s1>=s2 && s1>=s3) {
            s1 -= h1[i1++];
        } else if (s2>=s1 && s2>=s3) {
            s2 -= h2[i2++];
        } else {
            s3 -= h3[i3++];
        }
    }
}
int main() {
    int n1, n2, n3;
    scanf("%d %d %d", &n1, &n2, &n3);
    int h1[n1], h2[n2], h3[n3];
    for(int i=0;i<n1;i++) scanf("%d", &h1[i]);
    for(int i=0;i<n2;i++) scanf("%d", &h2[i]);
    for(int i=0;i<n3;i++) scanf("%d", &h3[i]);
    printf("%d\n", equalStacks(h1, n1, h2, n2, h3, n3));
    
    return 0;
}
